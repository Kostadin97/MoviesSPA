{{> header}}
<div class="container">
    <div class="row bg-light text-dark">
        <h1>{{ movie.title }}</h1>
        <div class="col-md-6">
            <img class="img-thumbnail" src="{{ movie.imageUrl }}" alt="Movie">
        </div>
        <div class="col-md-4 text-center">
            <h3 class="my-3 ">Movie Description</h3>
            <p>{{ movie.description }}</p>
            {{#if movie.imTheSalesMan}}
            <a class="btn btn-danger" href="#/delete/{{ movie.id }}">Delete</a>
            <a class="btn btn-warning" href="#/edit/{{ movie.id }}">Edit</a>
            {{else}}
            {{#if movie.imInTheClientsList}}
            <span class="enrolled-span">Liked {{ movie.likes }}</span>
            {{else}}
            <a class="btn btn-primary" href="#/like/{{ movie.id }}">Like</a>
            {{/if}}
            {{/if}}

            <h1>Comments</h1>
            {{#each movie.comments}}
            <p>{{ this.number}}. {{ this.name }}: {{ this.comment }}</p>
            {{/each}}
            <div>
                
            </div>
            <div>
                <h3>Place your comment here</h3>
                <input type="text" id="commentHere">
                <a href="#/comment/{{ movie.id }}">Submit</a>
            </div>
        </div>
        <div class="col-md-2 text-center">
            
        </div>
    </div>
</div>
{{> footer}}